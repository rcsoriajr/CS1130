abstract class ChessPiece {
    protected String name;
    protected int movementRange;

    public ChessPiece(String name, int movementRange) {
        this.name = name;
        this.movementRange = movementRange;
    }

    public abstract List<Square> getValidMoves(Square currentPosition); 
}

class Pawn extends ChessPiece {
    public Pawn(String color) {
        super(color + " Pawn", 1); 
    }

    @Override
    public List<Square> getValidMoves(Square currentPosition) {
        /* ??? */
    }
}

class Knight extends ChessPiece {
    public Knight(String color) {
        super(color + " Knight", 2); 
    }

    @Override
    public List<Square> getValidMoves(Square currentPosition) {
        /* ??? */
    }
}

